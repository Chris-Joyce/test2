@{
    ViewData["Title"] = "Employee Portal";
}
<head>
    <style>
        .borderexample {
            border-style: solid;
            border-color: #000000;
            padding: 1em;
            width: 300px;
        }
    </style>

    <style>
        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 50%;
            padding: 10px;
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>


<h2><img src="~/images/ACElogo.jpg" alt="ACE" height="40" />@ViewData["Title"]</h2>

<div class="row">
    <div class="column" style="background-color:#ffffff;">
        <p>Employee Status Tracker</p>
        <p class="borderexample"> Yellow example </p>
        <p class="borderexample"> Orange example </p>
        <p class="borderexample"> Red example </p>

    </div>

    <div class="column" style="background-color:#ffffff;">
        <p>Employee Details</p>
        <p class="borderexample"> details go here</p>
    </div>
</div>

